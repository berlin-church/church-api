{
  "name": "church-api",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "create-migration": "./node_modules/.bin/knex migrate:make",
    "migrate-latest": "./node_modules/.bin/knex migrate:latest",
    "rollback": "./node_modules/.bin/knex migrate:rollback",
    "serve": "node dist/server.js",
    "watch-ts": "tsc -w",
    "watch-node": "NODE_ENV=development npx nodemon dist/server.js",
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Nodemon\" -c \"yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "lint": "eslint ./src --ext .js,.ts",
    "build": "yarn lint && tsc"
  },
  "devDependencies": {
    "@types/config": "^0.0.36",
    "@types/graphql": "^14.2.0",
    "@types/hapi__hapi": "^19.0.3",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/sqlite3": "^3.1.5",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "concurrently": "^4.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@hapi/hapi": "^19.1.1",
    "apollo-server": "^2.12.0",
    "apollo-server-hapi": "^2.12.0",
    "config": "^3.3.1",
    "graphql": "^14.1.1",
    "js-yaml": "^3.13.1",
    "knex": "^0.21.0",
    "pg": "^8.0.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.6"
  }
}
